@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h3 class="title">Orders From This Vendor</h3>

@if (@Model["orders"].Count == 0)
{
  <h3>No orders have been added yet!</h3>
} 

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ol>

<h3><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></h3>
<h3><a href='/vendors'>Return to vendor list</a></h3>
<p><a href='/'>Return to Main Page</a></p>